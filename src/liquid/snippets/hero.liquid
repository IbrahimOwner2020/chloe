{% style %}
    .hero {
        background-image: linear-gradient(rgba(74, 74, 74, 0.6), rgba(74, 74, 74, 0.6)), url('{{ settings.back_img | img_url: 'master' }}');
    }
{% endstyle %}


<div class="hero">
    <div class="hero__heading">
        <h1 class="hero__title">{{ settings.hero_title }}</h1>
        <a href="{{ settings.link_url }}" class="hero__btn">{{ settings.link_text }}</a>
    </div>
</div>